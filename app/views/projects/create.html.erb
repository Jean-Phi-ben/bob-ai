<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-lg-8 col-md-10">
      <div class="card shadow-sm border-0">
        <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
          <div>
            <h4 class="mb-0">
              ðŸŽ‰ Project created successfully
            </h4>
            <small class="d-block">
              Created by <strong><%= @project.user.email %></strong>
              Â· <%= l(@project.created_at, format: :short) rescue @project.created_at.to_s %>
            </small>
          </div>
          <span class="badge bg-light text-success text-uppercase">
            <%= @project.status.presence || "Draft" %>
          </span>
        </div>

        <div class="card-body">
          <h5 class="card-title mb-3">
            <%= @project.title %>
          </h5>

          <% if @project.description.present? %>
            <p class="card-text text-muted">
              <%= @project.description %>
            </p>
          <% end %>

          <dl class="row mb-0">
            <dt class="col-sm-3">Category</dt>
            <dd class="col-sm-9">
              <span class="badge bg-primary-subtle border border-primary-subtle text-primary-emphasis px-3 py-2 rounded-pill">
                <%= @project.category.presence || "Not specified" %>
              </span>
            </dd>

            <% if @project.tools.present? %>
              <dt class="col-sm-3 mt-3">Tools</dt>
              <dd class="col-sm-9 mt-3">
                <% Array(@project.tools).each do |tool| %>
                  <span class="badge bg-secondary-subtle border border-secondary-subtle text-secondary-emphasis me-1 mb-1">
                    <%= tool %>
                  </span>
                <% end %>
              </dd>
            <% end %>

            <% if @project.materials.present? %>
              <dt class="col-sm-3 mt-3">Materials</dt>
              <dd class="col-sm-9 mt-3">
                <% Array(@project.materials).each do |material| %>
                  <span class="badge bg-info-subtle border border-info-subtle text-info-emphasis me-1 mb-1">
                    <%= material %>
                  </span>
                <% end %>
              </dd>
            <% end %>

            <% if @project.respond_to?(:processus) && @project.processus.present? %>
              <dt class="col-sm-3 mt-3">Process</dt>
              <dd class="col-sm-9 mt-3">
                <ol class="mb-0 ps-3">
                  <% Array(@project.processus).each do |step| %>
                    <li class="mb-1"><%= step %></li>
                  <% end %>
                </ol>
              </dd>
            <% end %>
          </dl>
        </div>

        <div class="card-footer bg-white d-flex flex-wrap gap-2 justify-content-between">
          <div class="d-flex flex-wrap gap-2">
            <%= link_to "View project", project_path(@project),
                class: "btn btn-primary" %>

            <%= link_to "Create another project", new_project_path,
                class: "btn btn-outline-primary" %>
          </div>

          <%= link_to "Back to home", root_path,
              class: "btn btn-link text-muted p-0 align-self-center" %>
        </div>
      </div>
    </div>
  </div>
</div>

